// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  email          String        @unique
  username       String        @unique
  passwordHash   String
  role           UserRole      @default(USER)
  banned         Boolean       @default(false)
  communitiesCreated Community[] @relation("UserCreatedCommunities")
  memberships    Membership[]
  posts          Post[]
  comments       Comment[]
  postVotes      PostVote[]
  commentVotes   CommentVote[]
  topicsCreated  Topic[]
  opinions       Opinion[]
  opinionVotes   OpinionVote[]
  reportsFiled   Report[]      @relation("Reporter")
  reportsResolved Report[]     @relation("ResolvedBy")
  reportsReceived Report[]     @relation("ReportedUser")
  pollsCreated   Poll[]
  notifications  Notification[] @relation("NotificationsForUser")
  notificationsAuthored Notification[] @relation("NotificationsFromActor")
  following      Follow[]      @relation("Following")
  followers      Follow[]      @relation("Followers")
  pollVotes      PollVote[]
}

model Community {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  name        String        @unique
  title       String
  description String?
  slug        String        @unique
  creator     User          @relation("UserCreatedCommunities", fields: [creatorId], references: [id])
  creatorId   String
  memberships Membership[]
  posts       Post[]
  polls       Poll[]
}

model Membership {
  id           String     @id @default(cuid())
  createdAt    DateTime   @default(now())
  role         MembershipRole @default(MEMBER)
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  community    Community  @relation(fields: [communityId], references: [id])
  communityId  String

  @@unique([userId, communityId])
}

enum MembershipRole {
  MEMBER
  MODERATOR
  OWNER
}

model Post {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  title        String
  content      String
  caution      Boolean     @default(false)
  author       User        @relation(fields: [authorId], references: [id])
  authorId     String
  community    Community   @relation(fields: [communityId], references: [id])
  communityId  String
  comments     Comment[]
  votes        PostVote[]
  views        PostView[]
  reports      Report[]
}

model Comment {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  content     String
  caution     Boolean    @default(false)
  author      User       @relation(fields: [authorId], references: [id])
  authorId    String
  post        Post       @relation(fields: [postId], references: [id])
  postId      String
  parent      Comment?   @relation("CommentToComment", fields: [parentId], references: [id])
  parentId    String?
  children    Comment[]  @relation("CommentToComment")
  votes       CommentVote[]
  reports     Report[]
}

model PostVote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  value     Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String

  @@unique([userId, postId])
}

model CommentVote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  value     Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  comment   Comment  @relation(fields: [commentId], references: [id])
  commentId String

  @@unique([userId, commentId])
}

model PostView {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
}

// Debate models

model Topic {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  title       String
  description String?
  category    TopicCategory @default(DOMESTIC)
  creator     User       @relation(fields: [creatorId], references: [id])
  creatorId   String
  opinions    Opinion[]
  polls       Poll[]
}

model Opinion {
  id         String       @id @default(cuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  content    String
  caution    Boolean      @default(false)
  side       DebateSide
  author     User         @relation(fields: [authorId], references: [id])
  authorId   String
  topic      Topic        @relation(fields: [topicId], references: [id])
  topicId    String
  parent     Opinion?     @relation("OpinionToOpinion", fields: [parentId], references: [id])
  parentId   String?
  children   Opinion[]    @relation("OpinionToOpinion")
  votes      OpinionVote[]
  reports    Report[]
}

model OpinionVote {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  value      Int      // 1 like, -1 dislike
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  opinion    Opinion  @relation(fields: [opinionId], references: [id])
  opinionId  String

  @@unique([userId, opinionId])
}

enum DebateSide {
  PRO
  CON
}

enum TopicCategory {
  DOMESTIC
  INTERNATIONAL
  ECONOMY
}

enum UserRole {
  USER
  ADMIN
}

enum ReportStatus {
  OPEN
  RESOLVED
}

model Report {
  id             String      @id @default(cuid())
  createdAt      DateTime    @default(now())
  reporter       User        @relation("Reporter", fields: [reporterId], references: [id])
  reporterId     String
  reportedUser   User?       @relation("ReportedUser", fields: [reportedUserId], references: [id])
  reportedUserId String?
  post           Post?       @relation(fields: [postId], references: [id])
  postId         String?
  comment        Comment?    @relation(fields: [commentId], references: [id])
  commentId      String?
  opinion        Opinion?    @relation(fields: [opinionId], references: [id])
  opinionId      String?
  reason         String
  status         ReportStatus @default(OPEN)
  resolvedAt     DateTime?
  resolvedBy     User?        @relation("ResolvedBy", fields: [resolvedById], references: [id])
  resolvedById   String?

  @@index([postId])
  @@index([commentId])
  @@index([opinionId])
}

// Polling
model Poll {
  id           String     @id @default(cuid())
  createdAt    DateTime   @default(now())
  question     String
  creator      User       @relation(fields: [creatorId], references: [id])
  creatorId    String
  community    Community? @relation(fields: [communityId], references: [id])
  communityId  String?
  topic        Topic?     @relation(fields: [topicId], references: [id])
  topicId      String?
  options      PollOption[]
  votes        PollVote[]
}

model PollOption {
  id        String   @id @default(cuid())
  text      String
  poll      Poll     @relation(fields: [pollId], references: [id])
  pollId    String
  votes     PollVote[]
}

model PollVote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  poll      Poll     @relation(fields: [pollId], references: [id])
  pollId    String
  option    PollOption @relation(fields: [optionId], references: [id])
  optionId  String

  @@unique([userId, pollId])
}

// Follow and Notifications
model Follow {
  id           String @id @default(cuid())
  createdAt    DateTime @default(now())
  follower     User   @relation("Following", fields: [followerId], references: [id])
  followerId   String
  following    User   @relation("Followers", fields: [followingId], references: [id])
  followingId  String

  @@unique([followerId, followingId])
}

enum NotificationType {
  REFUTATION
  LIKE
  FOLLOWED_USER_ACTIVITY
}

model Notification {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  user      User     @relation("NotificationsForUser", fields: [userId], references: [id]) // recipient
  userId    String
  actor     User?    @relation("NotificationsFromActor", fields: [actorId], references: [id])
  actorId   String?
  type      NotificationType
  message   String
  url       String?
  seen      Boolean  @default(false)
}
